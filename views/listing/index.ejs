<% layout('layouts/boilerplate') -%>
<div class="container pt-4">
  <h1 class="text-center my-4" style="margin-top: 20px">All Listings</h1>
  <div class="row g-4">
    <% for(let listing of allListing) { %>
    <div class="col-12 col-md-6 col-lg-4 d-flex justify-content-center">
      <a href="listing/<%= listing._id %>" style="text-decoration: none;">
        <div class="card round-2" style="width: 18rem; border: none">
          <img
            src="<%= listing.image.url %>"
            class="card-img-top listing-img"
            alt="listing_img"
            style="height: 12rem; object-fit: cover; border-radius: 10px; transition: transform 0.3s ease, box-shadow 0.3s ease;"
          />
          <div class="card-body">
            <p class="card-text text-left">
              <span class="fw-bold"><%= listing.title %></span><br />
              &#8377; <%= listing.price.toLocaleString('en-IN') %>/night
            </p>
          </div>
        </div>
      </a>
    </div>
    <% } %>
  </div>
</div>

